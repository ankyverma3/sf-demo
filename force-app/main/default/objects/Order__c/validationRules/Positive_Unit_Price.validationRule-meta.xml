<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Positive_Unit_Price</fullName>
    <active>true</active>
    <description>Ensures unit price is greater than zero</description>
    <errorConditionFormula>Unit_Price__c &lt;= 0</errorConditionFormula>
    <errorMessage>Unit price must be greater than zero</errorMessage>
    <errorDisplayField>Unit_Price__c</errorDisplayField>
</ValidationRule>
